{
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ES2022",
    "moduleResolution": "node",
    "rootDir": "source",
    "outDir": "output",
    "noImplicitAny": true,
  },
  "include": ["source/*.ts"]
}
